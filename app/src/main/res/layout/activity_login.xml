<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aktivnosti.Login"
    android:background="@color/pozadina"
    android:orientation="vertical">

    <TextView
        android:id="@+id/prijava"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Kviz slagalica"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="100px"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:fontFamily="sans-serif-medium"
        android:text="Email:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="55px"
        android:textStyle="italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:ems="20"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblLozinka"
        android:text="Lozinka:"
        android:textSize="55px"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="50px"
        android:fontFamily="sans-serif-medium"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLozinka"
        android:inputType="textPassword"
        android:longClickable="false"
        android:ems="20"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:text="Prijavi se"
        android:layout_marginTop="100px"
        android:layout_gravity="center_horizontal"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btnGost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="280px"
            android:layout_marginBottom="65dp"
            android:clickable="true"
            android:onClick=""
            android:text="Igraj kao gost"
            android:textSize="45px"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/btnRegistrujSe"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_marginRight="45dp"
            android:clickable="true"
            android:onClick=""
            android:text="REGISTRACIJA"
            android:textColor="@color/purple_200"
            android:textSize="40px"
            tools:ignore="OnClick" />


    </RelativeLayout>


</LinearLayout>