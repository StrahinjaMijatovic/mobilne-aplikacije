<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aktivnosti.Register"
    android:background="@color/pozadina"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:id="@+id/registracija"
        android:text="Registracija"
        android:textSize="100px"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblEmail"
        android:text="Email:"
        android:textSize="55px"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="50px"
        android:fontFamily="sans-serif-medium"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:ems="20"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblKorisnickoIme"
        android:text="Ime:"
        android:textSize="55px"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20px"
        android:fontFamily="sans-serif-medium"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtKorisnickoIme"
        android:ems="20"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblLozinka"
        android:text="Lozinka:"
        android:textSize="55px"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20px"
        android:fontFamily="sans-serif-medium"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLozinka"
        android:inputType="textPassword"
        android:longClickable="false"
        android:ems="20"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblPonovljenaLozinka"
        android:text="Potvrdi lozinku:"
        android:textSize="55px"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20px"
        android:fontFamily="sans-serif-medium"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPonovljenaLozinka"
        android:inputType="textPassword"
        android:longClickable="false"
        android:ems="20"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        android:backgroundTint="@color/purple_500"
        android:text="Registruj se"
        android:layout_marginTop="100px"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblText"
        android:text="VeÄ‡ imate nalog?"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"/>

    <TextView
        android:id="@+id/btnPrijaviSe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prijavi se"
        android:textColor="@color/purple_200"
        android:layout_gravity="center_horizontal"
        android:textSize="45px"
        android:clickable="true"
        android:onClick=""
        tools:ignore="OnClick" />
</LinearLayout>