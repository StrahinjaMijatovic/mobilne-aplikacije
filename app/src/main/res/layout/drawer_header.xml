<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:background="@color/pozadina"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="top"
    android:id="@+id/relativeDrawer">

    <RelativeLayout
        android:id="@+id/relativeHeader1"
        android:layout_width="369dp"
        android:layout_height="75dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtIme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar"
            android:gravity="left"
            android:text="Strahinja Filipovic"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:background="@color/pozadina"
            android:contentDescription="Opis slike"
            android:src="@drawable/covek" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeHeader1"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/brojTokena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1222 :poena"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeHeader3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeHeader1"
        android:layout_toRightOf="@id/relativeHeader2">

        <TextView
            android:id="@+id/brojZvezdica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="111 :tokena"
            android:layout_marginRight="6dp"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>
</RelativeLayout>
